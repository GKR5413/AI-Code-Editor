# Agent Service Environment Configuration
# Copy this file to .env and fill in your API keys

# Service Configuration
NODE_ENV=development
AGENT_SERVICE_PORT=6000

# ============================================
# GOOGLE AI / GEMINI API KEYS
# ============================================
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=

# Google Cloud Vertex AI (Optional - for enterprise features)
# Get credentials from: https://console.cloud.google.com/
GOOGLE_CLOUD_PROJECT_ID=
GOOGLE_APPLICATION_CREDENTIALS=

# ============================================
# ANTHROPIC / CLAUDE API KEYS
# ============================================
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=
CLAUDE_API_KEY=

# ============================================
# OPENAI API KEYS
# ============================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# OpenAI Organization ID (Optional)
OPENAI_ORG_ID=

# ============================================
# GROQ API KEYS
# ============================================
# Get your API key from: https://console.groq.com/
GROQ_API_KEY=

# ============================================
# MISTRAL AI API KEYS
# ============================================
# Get your API key from: https://console.mistral.ai/
MISTRAL_API_KEY=

# ============================================
# COHERE API KEYS
# ============================================
# Get your API key from: https://dashboard.cohere.com/api-keys
COHERE_API_KEY=

# ============================================
# OTHER AI PROVIDERS (Optional)
# ============================================
# Hugging Face API Key
HUGGINGFACE_API_KEY=

# Together AI API Key
TOGETHER_API_KEY=

# Replicate API Key
REPLICATE_API_KEY=

# ============================================
# MODEL CONFIGURATION
# ============================================
# Default model to use (can be overridden per request)
DEFAULT_AI_PROVIDER=gemini
DEFAULT_MODEL=gemini-2.0-flash-exp

# Alternative defaults for other providers
DEFAULT_CLAUDE_MODEL=claude-3-5-sonnet-20241022
DEFAULT_OPENAI_MODEL=gpt-4o
DEFAULT_GROQ_MODEL=llama-3.1-70b-versatile
DEFAULT_MISTRAL_MODEL=mistral-large-latest
DEFAULT_COHERE_MODEL=command-r-plus

# ============================================
# GENERATION SETTINGS
# ============================================
# Maximum tokens for generation
MAX_TOKENS=4096

# Temperature for generation (0.0 - 2.0)
DEFAULT_TEMPERATURE=0.7

# Top P sampling
DEFAULT_TOP_P=1.0

# ============================================
# GRPC CONFIGURATION
# ============================================
# gRPC Terminal Service
GRPC_TERMINAL_HOST=localhost
GRPC_TERMINAL_PORT=50051

# ============================================
# SECURITY & CORS
# ============================================
# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:3000

# ============================================
# LOGGING & MONITORING
# ============================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable request logging
ENABLE_REQUEST_LOGGING=true

# ============================================
# DEBUGGING
# ============================================
# Enable debug mode
DEBUG=false

# Log API requests/responses
LOG_API_CALLS=false

# ============================================
# NOTES
# ============================================
# 1. Never commit the .env file to version control
# 2. Keep your API keys secure and rotate them regularly
# 3. Use different keys for development and production
# 4. Some providers offer free tiers - check their pricing pages
# 5. Monitor your API usage to avoid unexpected charges
