# Docker Environment Configuration for AI-IDE

# Compiler Service
COMPILER_SERVICE_URL=http://compiler:3002
COMPILER_SERVICE_PORT=3002
COMPILER_TIMEOUT=30000
MAX_FILE_SIZE=10485760  # 10MB
MAX_COMPILATION_TIME=60000  # 60 seconds

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=ide_db
POSTGRES_USER=ide_user
POSTGRES_PASSWORD=ide_password

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# IDE Configuration
NODE_ENV=development
IDE_PORT=5173
TERMINAL_PORT=3001
LSP_PORT=3003

# Security
RATE_LIMIT_WINDOW=60000  # 1 minute
RATE_LIMIT_REQUESTS=100
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Logging
LOG_LEVEL=info
LOG_FILE=/app/logs/ide.log

# Feature Flags
ENABLE_COMPILER=true
ENABLE_LSP=false
ENABLE_COLLABORATION=false
ENABLE_REMOTE_FS=false

# ============================================
# AI API KEYS (for Docker Compose)
# ============================================
# Gemini API Key (add your key here)
GEMINI_API_KEY=

# Groq API Key (add your key here)
GROQ_API_KEY=

# Claude API Key (add your key here)
CLAUDE_API_KEY=

# OpenAI API Key (add your key here)
OPENAI_API_KEY=

# Mistral API Key (add your key here)
MISTRAL_API_KEY=

# Cohere API Key (add your key here)
COHERE_API_KEY=