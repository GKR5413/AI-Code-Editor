# Claude Agent Service Environment Configuration
# Copy this file to .env and fill in your API keys

# Service Configuration
NODE_ENV=development
PORT=6001

# ============================================
# ANTHROPIC / CLAUDE API KEYS (REQUIRED)
# ============================================
# Get your API key from: https://console.anthropic.com/
# This is the primary key for this service
CLAUDE_API_KEY=

# Alternative name (both work)
ANTHROPIC_API_KEY=

# ============================================
# CLAUDE MODEL CONFIGURATION
# ============================================
# Default model to use
DEFAULT_MODEL=claude-3-5-sonnet-20241022

# Available models (as of October 2025):
# - claude-3-5-sonnet-20241022 (Latest Sonnet, best balance)
# - claude-3-5-opus-20241022 (Most powerful, highest quality)
# - claude-3-5-haiku-20241022 (Fast and efficient)
# - claude-3-opus-20240229 (Previous opus)
# - claude-3-sonnet-20240229 (Previous sonnet)
# - claude-3-haiku-20240307 (Previous haiku)

# ============================================
# GENERATION SETTINGS
# ============================================
# Maximum tokens for completion (default: 4096)
# Claude 3.5: up to 8192 tokens
# Claude 3 Opus: up to 4096 tokens
MAX_TOKENS=4096

# Temperature (0.0 - 1.0)
# Lower = more focused, Higher = more creative
DEFAULT_TEMPERATURE=0.7

# Top P sampling (0.0 - 1.0)
DEFAULT_TOP_P=1.0

# Top K sampling
DEFAULT_TOP_K=40

# ============================================
# SECURITY & CORS
# ============================================
# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:3000

# Enable API key authentication
REQUIRE_API_KEY=false
API_KEY_HEADER=X-API-Key

# ============================================
# LOGGING & MONITORING
# ============================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable request logging
ENABLE_REQUEST_LOGGING=true

# ============================================
# RATE LIMITING
# ============================================
# Enable rate limiting
ENABLE_RATE_LIMIT=true

# Requests per minute per IP
RATE_LIMIT_RPM=60

# ============================================
# ADVANCED FEATURES
# ============================================
# Enable streaming responses
ENABLE_STREAMING=true

# Enable function calling (tool use)
ENABLE_FUNCTION_CALLING=true

# Enable vision capabilities (image analysis)
ENABLE_VISION=true

# ============================================
# CACHING (Prompt Caching)
# ============================================
# Claude supports prompt caching to reduce costs
# Enable automatic prompt caching
ENABLE_PROMPT_CACHING=true

# Minimum tokens to cache (Claude recommends 1024+)
MIN_CACHE_TOKENS=1024

# ============================================
# DEBUGGING
# ============================================
# Enable debug mode
DEBUG=false

# Log API requests/responses
LOG_API_CALLS=false

# ============================================
# NOTES
# ============================================
# 1. Claude 3.5 Sonnet is recommended for most use cases
# 2. API pricing varies by model - check: https://www.anthropic.com/pricing
# 3. Keep your API keys secure and never commit .env to git
# 4. Use prompt caching for repeated long prompts to save costs
# 5. Streaming is recommended for better UX
