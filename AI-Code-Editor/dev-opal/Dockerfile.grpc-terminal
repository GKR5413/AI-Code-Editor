FROM node:20-alpine

# Install system dependencies
RUN apk add --no-cache \
    bash \
    curl \
    git \
    python3 \
    py3-pip \
    build-base \
    python3-dev \
    && rm -rf /var/cache/apk/*

# Set working directory
WORKDIR /app

# Copy package files
COPY grpc-terminal-service/package*.json ./

# Install dependencies
RUN npm ci --omit=dev --legacy-peer-deps

# Copy source code
COPY grpc-terminal-service/ .

# Create workspace directory
RUN mkdir -p /workspace /projects

# Set permissions
RUN chown -R node:node /app /workspace /projects

# Switch to non-root user
USER node

# Expose gRPC port
EXPOSE 50051

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=10s --retries=3 CMD ["node", "-e", "console.log('health ok')"]

# Start the gRPC terminal server
CMD ["node", "grpc-terminal-server.js"]
