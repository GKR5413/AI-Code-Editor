FROM ubuntu:22.04

# Set environment variables
ENV DEBIAN_FRONTEND=noninteractive
ENV TERM=xterm-256color
ENV SHELL=/bin/bash

# Update and install essential packages
RUN apt-get update && apt-get install -y \
    bash \
    curl \
    wget \
    git \
    vim \
    nano \
    htop \
    tree \
    file \
    unzip \
    zip \
    python3 \
    python3-pip \
    nodejs \
    npm \
    build-essential \
    gcc \
    g++ \
    make \
    cmake \
    openssh-client \
    ca-certificates \
    gnupg \
    lsb-release \
    sudo \
    && rm -rf /var/lib/apt/lists/*

# Install additional development tools
RUN npm install -g yarn typescript ts-node nodemon

# Create a non-root user for security
RUN useradd -m -s /bin/bash -G sudo developer && \
    echo "developer:developer" | chpasswd && \
    echo "developer ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers

# Set up workspace and projects directories
RUN mkdir -p /workspace /projects && \
    chown developer:developer /workspace /projects

# Configure bash for better terminal experience with workspace integration
RUN echo 'export PS1="\[\e[36m\]\u@docker-terminal\[\e[m\]:\[\e[32m\]\w\[\e[m\]\$ "' >> /home/developer/.bashrc && \
    echo 'export HISTSIZE=1000' >> /home/developer/.bashrc && \
    echo 'export HISTCONTROL=ignoreboth' >> /home/developer/.bashrc && \
    echo 'alias ll="ls -alF"' >> /home/developer/.bashrc && \
    echo 'alias la="ls -A"' >> /home/developer/.bashrc && \
    echo 'alias l="ls -CF"' >> /home/developer/.bashrc && \
    echo 'alias workspace="cd /workspace"' >> /home/developer/.bashrc && \
    echo 'alias projects="cd /projects"' >> /home/developer/.bashrc && \
    echo 'export WORKSPACE_PATH=/workspace' >> /home/developer/.bashrc && \
    echo 'export PROJECTS_PATH=/projects' >> /home/developer/.bashrc && \
    echo 'cd /workspace' >> /home/developer/.bashrc

# Set working directory to workspace (shared volume mount point)
WORKDIR /workspace

# Switch to non-root user
USER developer

# Default command
CMD ["/bin/bash"]
